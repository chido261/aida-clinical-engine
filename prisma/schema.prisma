generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model UserState {
  id            String   @id
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  dailyMsgDate  String   @default("") // "YYYY-MM-DD" (UTC)
  dailyMsgCount Int      @default(0)

  baselineA1c        Float?
  baselineAvgGlucose Int?
  baselineSetAt      DateTime?
}

model Reading {
  id        Int      @id @default(autoincrement())
  userId    String
  glucose   Int
  moment    String
  symptoms  String?
  createdAt DateTime @default(now())
}